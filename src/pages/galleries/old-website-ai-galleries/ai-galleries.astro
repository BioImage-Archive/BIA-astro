---
import OldLayout from "../../../layouts/OldLayout.astro";
import GalleryCard from "../../../components/cards/GalleryRoundImageCard.astro"
const galleryData = {
  "name": "AI Playground",
  "title": "The BioImage Archive AI Gallery",
  "subtitle": "Explore AI-ready image data and how AI models perform on different datasets",
  "body_text": "In this page you can explore AI-related datasets and models. You can browse a selection of AI-ready datasets curated to facilitate model development. You can also explore the outputs of several models from the BioImage Model Zoo on a dataset to get an idea of what is the most suitable model for a specific image. Or you can investigate how a model works on different datasets and see how widely applicable the model is.",
  "gallery_item_basepath": "/bioimage-archive/galleries/",
  "collections": [
    {
      "name":"AI.html",
      "title":"AI-ready datasets",
      "subtitle":"A collection of AI-ready annotated datasets",
      "summary_image":"/bioimage-archive/galleries/assets/ai_ready_datasets.png"
    },
    {
      "name":"analysed-ai-datasets",
      "title":"Analysed datasets",
      "subtitle":"A selection of datasets analysed using different models",
      "summary_image":"/bioimage-archive/galleries/assets/ai_pg_dataset.png"
    },
    {
      "name":"ai-models",
      "title":"Model Evaluation Platform",
      "subtitle":"A selection of BioImage Model Zoo models applied to BioImage Archive datasets",
      "summary_image":"/bioimage-archive/galleries/assets/ai_pg_model.png"
    }
  ]
}
---
<OldLayout title="ai galleries">
    <body>
        <section
            class="vf-news-container vf-news-container--featured | vf-stack "
        >
            <div class="vf-section-header">
                <h2 class="vf-section-header__heading">
                    <br />
                    {galleryData.title}
                </h2>
            </div>

            {
                galleryData.subtitle && (
                    <div>
                        <h3 class="vf-section-subheader__heading">
                            {galleryData.subtitle}
                        </h3>
                    </div>
                )
            }

            {
                galleryData.body_text && (
                    <div class=" vf-grid | vf-grid__col-3 |">
                        <p class="vf-grid__col--span-2 | vf-content">
                            {galleryData.body_text}
                        </p>
                    </div>
                )
            }

            <div class="vf-news-container__content | vf-grid | vf-grid__col-4 |">
                {
                    Object.values(galleryData.collections).map((collection) => (
                        <GalleryCard collection={collection} linkPath={galleryData.gallery_item_basepath} />
                    ))
                }
            </div>
        </section>
    </body>
</OldLayout>