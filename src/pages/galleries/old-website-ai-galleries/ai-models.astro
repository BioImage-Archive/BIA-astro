---
import OldLayout from '../../../layouts/OldLayout.astro';
import BrowseDatasetHeading from '../../../components/BrowseDatasetsHeading.astro';
import collection from '../../../data/collections/ai-benchmark-models.json';
import ModelCard from '../../../components/cards/AIModelCard.astro';
import ModelInfo from '../../../data/ai-dataset-benchmarking/model-metadata-old-website.json'

const modelNames = collection["model_names"];

---
<OldLayout pageTitle={ collection.name }>
  <body>
    <BrowseDatasetHeading
    heading={collection.title }
  > 
     <p class="vf-hero__text" slot="body_text">{ collection.description }
      <br/>
      <span style="display: flex; justify-content: space-evenly; flex-wrap: wrap; padding-top:8px">
        <a href="https://ai4life.eurobioimaging.eu/" class="vf-badge vf-badge--primary" style="height: 60px; width: 240px; display: flex; justify-content: space-evenly; box-sizing: unset;">
            <img src="/bioimage-archive/galleries/assets/AI4Life_logo_neg_giraffe_solid.png" style="max-height:140%; padding-top:-40%">
        </a>
        <a href="https://bioimage.io/#/" class="vf-badge vf-badge--primary" style="height: 60px; width: 240px; display: flex; justify-content: space-evenly; box-sizing: unset;">
            <img src="/bioimage-archive/galleries/assets/bioimage-io-logo-white.png" style="max-height:80%; padding:10px">  
        </a>
     </span>
     </p>
  </BrowseDatasetHeading>

    <section class="vf-card-container | vf-card-container__col-4 | vf-u-background-color-ui--white | vf-u-fullbleed"  style="--vf-card__image--aspect-ratio: 16 / 9;">
        <div class="vf-card-container__inner">
          { Object.values(modelNames).map((modelName) => ( <ModelCard model={ ModelInfo[modelName] } modelPageUrl={"/bioimage-archive/galleries/ai/model/" + modelName} taglist={ModelInfo[modelName]?.tags || []}/> )) }
        </div>
    </section>
  </body>
</OldLayout>